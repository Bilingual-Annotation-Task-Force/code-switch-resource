include layout
    include topbar-front

    div#signup-wrapper
        div#data-box
            h1 Signup
            p or&nbsp;
                a(href="/login") Log in
        div#login-box
            form.signup-form(action="/signup-check" method="post")
                table
                    tr
                        td
                            label.username-field-label(for="username-field") Username:
                        td
                            input.username-field(type="text", id="name", name="username")
                    tr
                        td
                            label.password-field-label(for="password-field") Password:
                        td
                            input.password-field(type="password", id="password", name="password")
                    tr
                        td
                            label.email-field-label(for="password-field") Email:
                        td
                            input.email-field(type="email", id="email", name="email")
                    tr
                        td
                        td
                            button.submit-login(type="submit") Signup
        div#supplement-box


